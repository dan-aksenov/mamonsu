#!/usr/bin/make -f

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	python setup.py build build_ext
	touch build-stamp

clean:
	rm -f build-stamp configure-stamp
	[ ! -f Makefile ] || $(MAKE) clean
	python setup.py clean
	find mamonsu -name "*.pyc" -exec rm {} \;

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	python setup.py install --install-layout=deb --root=debian/mamonsu

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	install -m 0644 packaging/conf/example.conf debian/mamonsu/usr/share/mamonsu
	dh_installchangelogs -i
	dh_installinit -i
	dh_installdebconf -i
	dh_installlogrotate -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install
	dh_testdir -a
	dh_testroot -a
	dh_installdocs -a
	dh_installexamples -a
	dh_installchangelogs -a
	dh_installinit -a
	dh_installdebconf -a
	dh_installlogrotate -a
	dh_strip -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a


binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
